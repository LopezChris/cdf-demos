nifi.version=0.6.0
nifi.flow.configuration.file=/usr/cdf/cem/agents/minifi/cpp/nifi-minifi-cpp-0.6.0/conf/config.yml
nifi.administrative.yield.duration=30 sec
# If a component has no work to do (is "bored"), how long should we wait before checking again for work?
nifi.bored.yield.duration=10 millis

# Provenance Repository #
nifi.provenance.repository.directory.default=/usr/cdf/cem/agents/minifi/cpp/nifi-minifi-cpp-0.6.0/provenance_repository
nifi.provenance.repository.max.storage.time=360 MIN
nifi.provenance.repository.max.storage.size=750 MB
nifi.flowfile.repository.directory.default=/usr/cdf/cem/agents/minifi/cpp/nifi-minifi-cpp-0.6.0/flowfile_repository
nifi.database.content.repository.directory.default=/usr/cdf/cem/agents/minifi/cpp/nifi-minifi-cpp-0.6.0/content_repository

